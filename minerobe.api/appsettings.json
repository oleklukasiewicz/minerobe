{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BaseConnection": "server=.;database=minerobe;trusted_connection=true;Encrypt=False;TrustServerCertificate=True"
  },
  "Jwt": {
    "Authority": "https://securetoken.google.com/<your_app_id>",
    "Audience": "<your_app_id>"
  },
  "MicrosoftAuth": {
    "ClientId": "<your-client-id>",
    "OriginUri": "<your-origin-uri>",
    "CacheDirectory": "<your-cache-directory>",
    "CacheFileName": "<your-cache-file-name>"
  }
}
